<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="weatherUnited"
            type="com.example.android.marsphotos.domain.WeatherUnited" />
    </data>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        app:cardBackgroundColor="#EB4CAF50">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="50dp">

            <TextView

                android:id="@+id/date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:unixTime="@{weatherUnited.dateTime}"

                android:textAlignment="center"
                tools:text="date" />

            <TextView
                android:id="@+id/temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{@string/temp(weatherUnited.temperature)}"
                android:textAlignment="center"
                tools:text="temperature" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@{weatherUnited.weatherDescription}"
                android:textAlignment="center"
                tools:text="description" />

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</layout>


